<%# views/bikes/edit.ejs %>

<h1>Edit Favorite Location</h1>

<form action="<%= `/bike/${bikes.id}?_method=PUT` %>" method="POST">

<select name="intersection">
    <% for (let j = 0 ; j < data.length ; j ++) { %>
    <option value="<%= data[j].stationName %>">
    <%= data[j].stationName %></option>
    <% } %>
</select>

<br />
<br />

<label for="rating">Rating</label>
<select name="rating">
  <option value="Awful">Awful</option>
  <option value="Bad">Bad</option>
  <option value="Neutral" selected>Neutral</option>
  <option value="Good">Good</option>
  <option value="Great">Great</option>
</select>


<br />
<br />

<input type="submit" value="Save" />

</form>

<a href="<%= `/bike/${bikes.id}` %>">Cancel</a>